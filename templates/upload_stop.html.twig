{% extends "layout.html.twig" %}

{% block content %}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <form class="form-inline">
                    <a class="my-1 mr-sm-2" href="{% if verifyToken == token %}/?verifyToken={{ token }}{% else %}/{% endif %}">Головна</a> |
                    <strong class="ml-2">Завантажити фото зупинок</strong>
                    <select id="control_type" class="form-control mt-2 ml-auto">
                        <option value="{{ constant('Bus115\\Upload\\Manager::TYPE_TRANSPORT') }}">Транспорт</option>
                        <option selected value="{{ constant('Bus115\\Upload\\Manager::TYPE_STOP') }}">Зупинка</option>
                    </select>
                </form>
            </div>
            <div class="card-body">
                <h4>Оберіть файли фотографій ЗУПИНОК з компьютера</h4>
                <form action="/upload_stop" method="post" enctype="multipart/form-data" id="js-upload-form">
                    <div class="form-group">
                        <label for="formGroupInput">Зупинка, де зроблено фото</label>
                        <input type="text" class="form-control" id="formGroupInput" placeholder="Вулиця Тампере, в напрямку моста Патона">
                    </div>
                    <div class="form-group custom-file">
                        <label for="js-upload-files" class="custom-file-label">Оберіть файл</label>
                        <input type="file" name="files[]" id="js-upload-files" multiple class="custom-file-input">
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary mt-2" id="js-upload-submit">Завантажити файли</button>
                </form>

                <h4 class="card-title mt-3">Або перетягніть їх сюди</h4>
                <div class="upload-drop-zone" id="drop-zone">
                    Драг енд дроп
                </div>

            </div>
        </div>
    </div> <!-- /container -->
    <script src="{{ asset('js/upload.js') }}"></script>
{% endblock %}
